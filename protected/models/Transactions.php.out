	{
		return array(
			'prefix' => 'Prefix',
			'num' => 'Num',
			'type' => 'Type',
			'account' => 'Account',
			'refnum1' => 'Refnum1',
			'refnum2' => 'Refnum2',
			'date' => 'Date',
			'details' => 'Details',
